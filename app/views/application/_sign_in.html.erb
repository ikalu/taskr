<div class="signin">
  <h3>Sign In</h3>
  <%= form_for :session, url: session_path do |form| %>
    <div>
      <%= form.label :username %><br />
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.label :password %><br />
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "Sign in" %>
    </div>
  <% end %>
</div>

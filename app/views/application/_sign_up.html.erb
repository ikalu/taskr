<div class="signup">
  <h3>Sign Up</h3>
  <%= form_for user do |form| %>
    <div>
      <%= form.label :email %><br />
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :username %><br />
      <%= form.text_field :username %>
      <div>
        <%= form.label :password %><br />
        <%= form.password_field :password %>
      </div>
      <div>
        <%= form.submit "Sign up" %>
      </div>
    <% end %>
  </div>
